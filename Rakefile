# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.plugin :isolate

Hoe.spec 'kronk' do
  developer('Jeremie Castagna', 'yaksnrainbows@gmail.com')

  self.extra_deps << ['plist',    '>=3.1.0']
  self.extra_deps << ['json',     '>=1.2.0']
  self.extra_deps << ['nokogiri', '>=1.3.3']
  self.extra_deps << ['differ',   '>=0.1.1']
end

